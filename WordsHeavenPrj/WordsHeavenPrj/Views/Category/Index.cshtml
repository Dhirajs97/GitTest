@model IEnumerable<WordsHeavenPrj.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<p>
    <a asp-action="AddCategory" class="btn btn-primary">Add New Category</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    <a asp-action="EditCategory" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                    <a asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Button to go back to the Librarian Dashboard -->
<a asp-action="Index" asp-controller="Librarian" class="btn btn-secondary mt-3">Back to Dashboard</a>
