@model IEnumerable<WordsHeavenPrj.Models.Book>

@{
    ViewData["Title"] = "Book List";
}

<h2>Book List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>
                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-info">View</a>
                    <a asp-action="EditBook" asp-route-id="@book.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" asp-controller="Librarian" class="btn btn-secondary mt-3">Back to Dashboard</a>

<a asp-action="AddBook" class="btn btn-primary">Add New Book</a>
