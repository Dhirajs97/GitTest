@model WordsHeavenPrj.Models.AudioBook

@{
    ViewData["Title"] = "Delete Audio Book";
}

<h2>Delete Audio Book</h2>

<h3>Are you sure you want to delete this audio book?</h3>
<div>
    <h4>@Model.Title</h4>
    <p><strong>Author:</strong> @Model.Author</p>
    <p><strong>Reader:</strong> @Model.Reader</p>
    <p><strong>Category:</strong> @Model.Category?.Name</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
