@model WordsHeavenPrj.Models.AudioBook

@{
    ViewData["Title"] = "Audio Book Details";
}

<h2>Audio Book Details</h2>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src="~/audiobookcovers/@Model.CoverImagePath" alt="Cover Image" class="img-fluid" />
        </div>
        <div class="col-md-8">
            <h3>@Model.Title</h3>
            <p><strong>Author:</strong> @Model.Author</p>
            <p><strong>Reader:</strong> @Model.Reader</p>
            <p><strong>Category:</strong> @Model.Category?.Name</p>
            <p><strong>Audio File:</strong></p>
            <audio controls>
                <source src="~/audiobooks/@Model.AudioFilePath" type="audio/mpeg">
                Your browser does not support the audio element.
            </audio>
            <div class="mt-3">
                <a asp-action="EditAudioBook" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 20px;
    }

    h2, h3 {
        font-family: 'Arial', sans-serif;
    }

    p {
        font-size: 16px;
    }

    .img-fluid {
        max-width: 100%;
        height: auto;
    }

    .btn {
        margin-right: 10px;
    }



    h2, h3 {
        font-size: 1.5em;
    }

    p {
        font-size: 14px;
    }

    }
</style>
